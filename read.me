function a(x) {
    return x * 2;
}
var a;
alert(a);

Решение:
function a(x) {		// обьявление функции a() по сути является обычной переменной к которой передается какое-то значение  
    return x * 2;	// код функции 
}
var a;				// обьявление переменной a 
alert(a); 			// вывод на экран содержимого переменной a: тело функции (причем без var a результат будет тем же) 
					
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=---=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=

function b(x, y, a) {
    arguments[2] = 10;
    alert(a);
}
b(1, 2, 3);

Решение:
function b(x, y, a) {	// обьявление функции b c тремя входными параметрами x, y, a
    arguments[2] = 10;	// присваивание ячейке массива [2] значения 10
    alert(a);			// вывод на экран значения переменной а (она же вторая ячейка массива): 10
}
b(1, 2, 3);				// запуск функции с передаваемыми параметрами

