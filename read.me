var b = function a(x) {
    x && a(--x);
};
alert(a);

Решение:
var b = function a(x) {	// обьявляется функциональное выражение анонимной функции для переменной b
    x && a(--x);		// код функции
};
alert(a);				// ничего не будет выведено, переменная а не создавалась, в консоли будет ошибка "a is not defined"

